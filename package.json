{
  "name": "antokara.me",
  "version": "1.0.0",
  "description": "My personal web site",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-coverage": "jest --coverage",
    "build": "webpack --config ./config/webpack/production.js --env.NODE_ENV=production --env.production",
    "start": "webpack-dev-server --config ./config/webpack/development.js",
    "cm": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antokara/antokara.me.git"
  },
  "author": "Antonios Karagiannis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antokara/antokara.me/issues"
  },
  "homepage": "https://antokara.me",
  "devDependencies": {
    "autoprefixer": "^7.2.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-alias": "^1.0.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.4.2",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "extract-loader": "^1.0.1",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.19.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-scss": "^2.2.0",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "babel-minify-webpack-plugin": "^0.2.0",
    "clean-webpack-plugin": "^0.1.17",
    "contentful": "^5.0.5",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "doiuse": "^4.0.0",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.5.4",
    "eslint": "^4.13.1",
    "favicons-webpack-plugin": "0.0.7",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "html-webpack-template": "^6.1.0",
    "lost": "^8.2.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-font-magician": "^2.1.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.9",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^2.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "stylelint": "^8.3.1",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:jsx-a11y/recommended",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jsx-a11y",
      "jest"
    ],
    "env": {
      "browser": true,
      "jest/globals": true
    },
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "alias": [
          [
            "Actions",
            "../src/actions"
          ],
          [
            "Components",
            "../src/components"
          ],
          [
            "Constants",
            "../src/constants"
          ],
          [
            "Containers",
            "../src/containers"
          ],
          [
            "Helpers",
            "../src/helpers"
          ],
          [
            "Reducers",
            "../src/reducers"
          ]
        ]
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "max-nesting-depth": 3,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "mixin",
            "mixin-content",
            "define-mixin",
            "lost"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "/lost-.+/"
          ]
        }
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared"
    ],
    "moduleNameMapper": {
      "^Actions$": "<rootDir>/src/actions/",
      "^Components$": "<rootDir>/src/components/",
      "^Constants$": "<rootDir>/src/constants/",
      "^Containers$": "<rootDir>/src/containers/",
      "^Helpers$": "<rootDir>/src/helpers/",
      "^Reducers$": "<rootDir>/src/reducers/",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(p?css|less)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/config/jest/setup.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/config/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
