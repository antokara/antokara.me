@import 'Variables.pcss';
@import 'animate.css';

.contact {
  margin-top: 8vh;

  .icons {
    max-width: 11em;
    margin: 0 auto;
    lost-utility: clearfix;

    > div {
      lost-waffle: 1/2;
      animation: bounceIn 1s;
    }

    a {
      animation: bounce 1s;
    }
  }

  .text {
    text-align: center;
    font-style: italic;
    color: var(--color2);
    margin: 1.5em 0;
    animation: bounceInUp 1s;
  }
}
